<div class="container">
    @if (TitlePicture != null && ShowTitlePicture)
    {
        <div class="picture">
            @TitlePicture
        </div>
    }

    <div class="content">
        @ChildContent
    </div>

    @if (FooterContent != null && ShowFooterContent)
    {
        <div class="footer">
            @FooterContent
        </div>
    }
</div>

@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public bool ShowTitlePicture { get; set; } = true;

    [Parameter]
    public RenderFragment TitlePicture { get; set; }

    [Parameter]
    public bool ShowFooterContent { get; set; } = true;

    [Parameter]
    public RenderFragment FooterContent { get; set; }
}
